---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";

const title = "Portfolio | Full-Stack Developer";
const description =
  "Full-stack developer crafting user-centric web solutions with React, Node.js, and modern technologies.";
---

<!doctype html>
<html lang="en" class="theme-loading">
  <head>
    <!-- 
      CRITICAL: Theme initialization script MUST be first in <head>
      This prevents Flash of Inaccurate Color Theme (FOIT) 
    -->
    <script is:inline>
      (function () {
        // Immediately read theme from localStorage
        var savedTheme = localStorage.getItem("theme");
        var root = document.documentElement;

        // Remove the loading class and apply correct theme
        root.classList.remove("theme-loading");

        if (savedTheme === "light") {
          root.classList.add("light-theme");
          root.classList.remove("dark-theme");
        } else {
          root.classList.add("dark-theme");
          root.classList.remove("light-theme");
        }
      })();
    </script>

    <!-- Critical CSS to prevent flash - must be inline and before any external CSS -->
    <style is:inline>
      /* Hide page content until theme is determined - prevents FOIT */
      .theme-loading {
        visibility: hidden;
      }

      /* Fallback: if JS is disabled, show dark theme after 100ms */
      @media (scripting: none) {
        .theme-loading {
          visibility: visible;
        }
      }
    </style>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#ffffff" />
    <ClientRouter />

    <!-- Handle theme persistence during Astro View Transitions -->
    <script is:inline>
      document.addEventListener("astro:before-swap", function (event) {
        // Before swap: read current theme
        var currentTheme = localStorage.getItem("theme");

        // Apply theme to the NEW document before it's swapped in
        var newRoot = event.newDocument.documentElement;
        newRoot.classList.remove("theme-loading");

        if (currentTheme === "light") {
          newRoot.classList.add("light-theme");
          newRoot.classList.remove("dark-theme");
        } else {
          newRoot.classList.add("dark-theme");
          newRoot.classList.remove("light-theme");
        }
      });
    </script>

    <!-- Optimized Google Fonts Loading -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Alex+Brush&family=Anton&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />

    <!-- Preconnect to CDNs for skill icons -->
    <link rel="preconnect" href="https://cdn.jsdelivr.net" />
    <link rel="preconnect" href="https://avatars.githubusercontent.com" />
    <link rel="preconnect" href="https://astro.build" />
    <link rel="preconnect" href="https://vitejs.dev" />
    <link rel="preconnect" href="https://bun.sh" />
  </head>
  <body class="font-sans transition-colors duration-300 antialiased">
    <slot />

    <style is:global>
      @keyframes fadeUp {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes fadeLeft {
        from {
          opacity: 0;
          transform: translateX(20px);
        }
        to {
          opacity: 1;
          transform: translateX(0);
        }
      }

      @keyframes fadeRight {
        from {
          opacity: 0;
          transform: translateX(-20px);
        }
        to {
          opacity: 1;
          transform: translateX(0);
        }
      }

      @keyframes zoomIn {
        from {
          opacity: 0;
          transform: scale(0.95);
        }
        to {
          opacity: 1;
          transform: scale(1);
        }
      }

      .animate-fade-up {
        animation: fadeUp 0.6s ease-out forwards;
        opacity: 0;
      }

      .animate-fade-left {
        animation: fadeLeft 0.6s ease-out forwards;
        opacity: 0;
      }

      .animate-fade-right {
        animation: fadeRight 0.6s ease-out forwards;
        opacity: 0;
      }

      .animate-zoom-in {
        animation: zoomIn 0.6s ease-out forwards;
        opacity: 0;
      }
    </style>
  </body>
</html>
